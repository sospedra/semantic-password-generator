{
  "name": "spg",
  "private": true,
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "dev": "lerna run --parallel dev",
    "test": "lerna run --parallel test",
    "deploy:web": "git push -d origin gh-pages && git subtree push --prefix packages/website/dist origin gh-pages",
    "deploy:npm": "lerna publish from-package --yes",
    "deploy:extension": "lerna run --scope extension deploy",
    "bump": "lerna version --conventional-commits --yes"
  }
}
