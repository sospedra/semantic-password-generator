{
  "name": "spg-extension",
  "version": "6.4.0",
  "description": "Cross-browser extension for SPG",
  "private": true,
  "scripts": {
    "dev:chrome": "cross-env NODE_ENV=development cross-env TARGET_BROWSER=chrome webpack --watch",
    "dev:firefox": "cross-env NODE_ENV=development cross-env TARGET_BROWSER=firefox webpack --watch",
    "dev": "yarn dev:chrome",
    "build:chrome": "cross-env NODE_ENV=production cross-env TARGET_BROWSER=chrome webpack",
    "build:firefox": "cross-env NODE_ENV=production cross-env TARGET_BROWSER=firefox webpack",
    "build": "npm-run-all -s -p build:chrome build:firefox",
    "deploy:amo": "env-cmd web-ext-submit --source-dir extension/firefox",
    "deploy:cws": "env-cmd webstore upload --source extension/chrome --auto-publish",
    "deploy": "npm-run-all -s -p deploy:amo deploy:cws"
  },
  "dependencies": {
    "semantic-password-generator": "^6.4.0",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-destructuring": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/runtime": "^7.10.2",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "chrome-webstore-upload-cli": "^1.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "env-cmd": "^10.1.0",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "resolve-url-loader": "^3.1.1",
    "sass-loader": "^8.0.2",
    "terser-webpack-plugin": "^2.3.7",
    "web-ext-submit": "^4.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-fix-style-only-entries": "^0.5.0",
    "wext-manifest-loader": "^2.2.0",
    "wext-manifest-webpack-plugin": "^1.2.1",
    "zip-webpack-plugin": "^3.0.0"
  }
}
